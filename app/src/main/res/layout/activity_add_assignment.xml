<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_assignment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/_16sdp"
    android:paddingLeft="@dimen/_16sdp"
    android:paddingRight="@dimen/_16sdp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.brown.sb.add_assignment">

    <EditText
        android:layout_width="@dimen/_320sdp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:elevation="10dp"
        android:ems="10"
        android:layout_marginTop="38dp"
        android:id="@+id/assignName"
        android:hint="Assignment"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="@dimen/_320sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:elevation="10dp"
        android:id="@+id/assignType"
        android:layout_below="@+id/assignName"
        android:layout_alignStart="@+id/assignName" />

    <TextView
        android:text="Assignment Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/assignName"
        android:layout_alignStart="@+id/assignType"
        android:layout_marginTop="20dp"
        android:id="@+id/textView2" />

    <Spinner
        android:layout_width="@dimen/_320sdp"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_below="@+id/assignType"
        android:layout_alignStart="@+id/assignType"
        android:layout_marginTop="43dp"
        android:id="@+id/assignSubject" />

    <TextView
        android:text="Subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/assignType"
        android:layout_alignStart="@+id/assignSubject"
        android:layout_marginTop="19dp"
        android:id="@+id/textView3" />

    <Button
        android:text="Button"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dueDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:id="@+id/submit_assignment"
        android:onClick="submitAssignment" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:inputType="date"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:id="@+id/dueDate"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Due Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/assignSubject"
        android:layout_alignStart="@+id/dueDate" />

    <Spinner
        android:layout_width="@dimen/_320sdp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/assignSubject"
        android:id="@+id/assignCourse" />

    <TextView
        android:text="Course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/assignCourse"
        android:layout_alignStart="@+id/assignCourse"
        android:id="@+id/textView18" />
</RelativeLayout>
